Перем Обмен;

Процедура ОбработатьТекст(Данные)
	
	Данные = СокрП(Данные);
	РегВыражение = Новый РегулярноеВыражение("^");
	Данные = РегВыражение.Заменить(Данные,"|");
	Обмен.УстановитьТекстВВыделение(Данные);

КонецПроцедуры

Процедура ПриСозданииОбъекта()

	Обмен = ЗагрузитьСценарий("core/Обмен.os");
	ОбработатьТекст(Обмен.ПолучитьВыделенныйТекст());

КонецПроцедуры